--// Safe Chrollox Debug Panel Example (for developers)
-- Put this LocalScript in StarterGui
local player = game.Players.LocalPlayer
local gui = Instance.new("ScreenGui")
gui.Name = "ChrolloxSafePanel"
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

--// Toggle Button
local toggle = Instance.new("TextButton")
toggle.Size = UDim2.new(0,130,0,40)
toggle.Position = UDim2.new(0.05,0,0.5,-20)
toggle.BackgroundColor3 = Color3.fromRGB(150,0,0)
toggle.Text = "ðŸ©¸ Chrollox"
toggle.TextColor3 = Color3.new(1,1,1)
toggle.Font = Enum.Font.GothamBold
toggle.TextSize = 16
toggle.Active = true
toggle.Draggable = true
toggle.Parent = gui
Instance.new("UICorner", toggle).CornerRadius = UDim.new(0,6)

--// Main Frame
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0,300,0,220)
frame.Position = UDim2.new(0.5,-150,0.5,-110)
frame.BackgroundColor3 = Color3.fromRGB(40,0,0)
frame.Visible = false
frame.Active = true
frame.Draggable = true
frame.Parent = gui
Instance.new("UICorner",frame).CornerRadius = UDim.new(0,8)

local title = Instance.new("TextLabel")
title.Size = UDim2.new(1,0,0,30)
title.BackgroundTransparency = 1
title.Text = "ðŸ©¸ Chrollox"
title.Font = Enum.Font.GothamBlack
title.TextSize = 20
title.TextColor3 = Color3.fromRGB(255,70,70)
title.Parent = frame

-- Example variable to control
local testValue = 10

-- Slider +/â€“ UI
local label = Instance.new("TextLabel")
label.Size = UDim2.new(1,-20,0,20)
label.Position = UDim2.new(0,10,0,50)
label.BackgroundTransparency = 1
label.Text = "Test Value: "..testValue
label.TextColor3 = Color3.fromRGB(255,255,255)
label.Font = Enum.Font.GothamBold
label.TextSize = 14
label.Parent = frame

local bar = Instance.new("Frame")
bar.Size = UDim2.new(0,200,0,6)
bar.Position = UDim2.new(0,50,0,80)
bar.BackgroundColor3 = Color3.fromRGB(80,0,0)
bar.Parent = frame
Instance.new("UICorner",bar).CornerRadius = UDim.new(0,4)

local fill = Instance.new("Frame")
fill.Size = UDim2.new(testValue/100,0,1,0)
fill.BackgroundColor3 = Color3.fromRGB(255,60,60)
fill.Parent = bar
Instance.new("UICorner",fill).CornerRadius = UDim.new(0,4)

local UIS = game:GetService("UserInputService")
local dragging = false
bar.InputBegan:Connect(function(input)
	if input.UserInputType==Enum.UserInputType.MouseButton1 then dragging=true end
end)
bar.InputEnded:Connect(function(input)
	if input.UserInputType==Enum.UserInputType.MouseButton1 then dragging=false end
end)
UIS.InputChanged:Connect(function(input)
	if dragging and input.UserInputType==Enum.UserInputType.MouseMovement then
		local percent = math.clamp((input.Position.X-bar.AbsolutePosition.X)/bar.AbsoluteSize.X,0,1)
		fill.Size = UDim2.new(percent,0,1,0)
		testValue = math.floor(percent*100)
		label.Text = "Test Value: "..testValue
	end
end)

-- + and - buttons
local minus = Instance.new("TextButton")
minus.Size = UDim2.new(0,30,0,30)
minus.Position = UDim2.new(0,30,0,110)
minus.BackgroundColor3 = Color3.fromRGB(80,0,0)
minus.Text = "-"
minus.TextColor3 = Color3.new(1,1,1)
minus.Parent = frame
Instance.new("UICorner",minus).CornerRadius = UDim.new(0,6)

local plus = Instance.new("TextButton")
plus.Size = UDim2.new(0,30,0,30)
plus.Position = UDim2.new(0,240,0,110)
plus.BackgroundColor3 = Color3.fromRGB(80,0,0)
plus.Text = "+"
plus.TextColor3 = Color3.new(1,1,1)
plus.Parent = frame
Instance.new("UICorner",plus).CornerRadius = UDim.new(0,6)

local function updateVal()
	testValue = math.clamp(testValue,0,100)
	fill.Size = UDim2.new(testValue/100,0,1,0)
	label.Text = "Test Value: "..testValue
end

minus.MouseButton1Click:Connect(function()
	testValue -= 2
	updateVal()
end)

plus.MouseButton1Click:Connect(function()
	testValue += 2
	updateVal()
end)

-- Toggle panel
toggle.MouseButton1Click:Connect(function()
	frame.Visible = not frame.Visible
end)
